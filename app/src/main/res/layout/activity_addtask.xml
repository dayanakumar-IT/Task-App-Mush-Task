<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:backgroundTint="@color/green">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/days_container"
        android:layout_width="406dp"
        android:layout_height="137dp"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/sunday_text"
            android:layout_width="41dp"
            android:layout_height="46dp"
            android:background="@drawable/day_background"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/monday_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/monday_text"
            android:layout_width="41dp"
            android:layout_height="46dp"
            android:background="@drawable/day_background"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/sunday_text"
            app:layout_constraintEnd_toStartOf="@+id/tuesday_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sunday_text"
            app:layout_constraintTop_toTopOf="@+id/sunday_text" />

        <TextView
            android:id="@+id/tuesday_text"
            android:layout_width="41dp"
            android:layout_height="46dp"
            android:background="@drawable/day_background"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/monday_text"
            app:layout_constraintEnd_toStartOf="@+id/wednesday_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/monday_text"
            app:layout_constraintTop_toTopOf="@+id/monday_text" />

        <TextView
            android:id="@+id/wednesday_text"
            android:layout_width="41dp"
            android:layout_height="46dp"
            android:background="@drawable/day_background"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/tuesday_text"
            app:layout_constraintEnd_toStartOf="@+id/thursday_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tuesday_text"
            app:layout_constraintTop_toTopOf="@+id/tuesday_text"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/thursday_text"
            android:layout_width="41dp"
            android:layout_height="46dp"
            android:background="@drawable/day_background"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/wednesday_text"
            app:layout_constraintEnd_toStartOf="@+id/friday_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/wednesday_text"
            app:layout_constraintTop_toTopOf="@+id/wednesday_text" />

        <TextView
            android:id="@+id/friday_text"
            android:layout_width="41dp"
            android:layout_height="46dp"
            android:background="@drawable/day_background"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/thursday_text"
            app:layout_constraintEnd_toStartOf="@+id/saturday_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/thursday_text"
            app:layout_constraintTop_toTopOf="@+id/thursday_text" />

        <TextView
            android:id="@+id/saturday_text"
            android:layout_width="41dp"
            android:layout_height="46dp"
            android:background="@drawable/day_background"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/friday_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/friday_text"
            app:layout_constraintTop_toTopOf="@+id/friday_text" />

        <TextView
            android:id="@+id/namereceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_da"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.522"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.052" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="238dp"
        android:layout_height="232dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139"
        app:srcCompat="@drawable/bgremovedsinglemush" />


    <EditText
        android:id="@+id/newtasktitle"
        android:layout_width="254dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/newtaskh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_da"
        android:text="@string/newtask"
        android:textColor="@color/greentheme"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362" />

    <TextView
        android:id="@+id/descriptionh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_da"
        android:text="@string/description"
        android:textColor="@color/greentheme"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <EditText
        android:id="@+id/description"
        android:layout_width="253dp"
        android:layout_height="54dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.876"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="382dp"
        android:layout_height="139dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/greentheme"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Priority level -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_da"
                    android:text="@string/priority"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/priority_level_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:entries="@array/priority_levels" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/create_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="@string/create"
                    android:textColor="@color/white" /> <!-- Add margin here -->

                <Button
                    android:id="@+id/display_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="@string/display"
                    android:textColor="@color/white" /> <!-- Add margin here -->

                <Button
                    android:id="@+id/delete_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/delete"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/timer"
        android:layout_width="243dp"
        android:layout_height="248dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895"
        app:srcCompat="@drawable/timer" />


    <androidx.cardview.widget.CardView
        android:id="@+id/task_card"
        android:layout_width="394dp"
        android:layout_height="222dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/greentheme"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/days_container"
        app:layout_constraintVertical_bias="0.878">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="397dp"
            android:layout_height="195dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Task Title TextView -->
            <TextView
                android:id="@+id/display_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_da"
                android:text="Task Title"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/black" />

            <!-- Task Description TextView with margin for spacing -->
            <TextView
                android:id="@+id/display_task_description"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/baloo_da"
                android:text="Task Description"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/black" />

            <!-- Task Priority TextView with margin for spacing -->
            <TextView
                android:id="@+id/display_task_priority"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/baloo_da"
                android:text="Priority Level"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Divider Line (optional if required after this TextView) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
